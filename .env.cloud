# Environment variables for cloud deployment
# Neon.tech PostgreSQL connection string
SPRING_DATASOURCE_URL=jdbc:postgresql://ep-xxx-xxx.region.aws.neon.tech/exam_portal_db?sslmode=require

# Neon.tech credentials (from Neon dashboard)
SPRING_DATASOURCE_USERNAME=your_neon_username
SPRING_DATASOURCE_PASSWORD=your_neon_password

# Upstash Redis connection
SPRING_REDIS_HOST=your-redis-xxxxx.upstash.io
SPRING_REDIS_PASSWORD=your_upstash_token

# JWT secret (generate with: openssl rand -base64 64)
JWT_SECRET=CHANGE_ME_LONG_RANDOM_STRING_AT_LEAST_64_CHARACTERS

# RapidAPI Judge0 (from rapidapi.com dashboard)
JUDGE0_BASE_URL=https://judge0-ce.p.rapidapi.com
RAPIDAPI_KEY=your_rapidapi_key_here

# Port (Render sets this automatically)
PORT=8080
